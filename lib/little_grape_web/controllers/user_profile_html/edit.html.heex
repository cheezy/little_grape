              >
                <option value="">{gettext("Select...")}</option>
                <%= for option <- @hair_color_options do %>
                  <option value={option} selected={f[:hair_color].value == option}>
                    {translate_option(option, :hair_color)}
                  </option>
                <% end %>
              </select>
              <.error :for={msg <- f[:hair_color].errors}>{translate_error(msg)}</.error>
            </div>
          </div>
        </div>

        <div class="border-t border-gray-200"></div>
        
<!-- Preferences Section -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
            <svg
              class="w-5 h-5 text-red-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
